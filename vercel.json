{
  "routes": [{
    "src": "/api/(.*)",
    "dest": "api/index.py",
    "headers": {
      "Access-Control-Allow-Origin": "*",
      "Access-Control-Allow-Methods": "POST, PUT, PATCH, OPTIONS",
      "Access-Control-Allow-Headers": "*"
    }
  }],
  "functions": {
    "api/**/*.py": {
      "excludeFiles": "{+(node_modules|public|src|static|_site)/**,*.js,*.json,README.md}"
    }
  },
  "github": {
    "silent": true
  }
}
